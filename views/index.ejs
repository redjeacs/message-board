<html>
  <head>
    <link rel="stylesheet" href="/index.css" />
  </head>
  <body>
    <h1 class="title"><%= title %></h1>
    <a href="/new"><button class="post-msg">Post a message</button></a>
    <ul class="message-container">
      <% messages.forEach((message) => { %>
      <li>
        <div class="user">User: <%= message.user %></div>
        <div class="date">Date: <%= message.added %></div>
        <div class="message">Message: <%= message.text %></div>
        <a href="/message/<%= message.id %>"><button>Open</button></a>
      </li>
      <div class="line-br"></div>
      <% }) %>
    </ul>
  </body>
</html>
